@model RankingSystem.Data.Models.TeamMember
@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" />
<div class="container body-content">
    <input type="hidden" asp-for="Id" />
    <h3>@ViewData["Title"]</h3>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Member.FullName)</dt>
        <dd>@Html.DisplayFor(model => model.Member.FullName)</dd>
        <dt>@Html.DisplayNameFor(model => model.Member.Email)</dt>
        <dd>@Html.DisplayFor(model => model.Member.Email)</dd>
    </dl>
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    </form>
</div>